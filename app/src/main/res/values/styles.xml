<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomSearchViewTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorSurface">@color/lavender</item>
        <item name="colorOnSurface">@color/inverse</item>
    </style>

    <style name="SearchViewWithAccent" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@android:color/system_accent2_500</item>
        <item name="colorOnSurface">@color/inverse</item>
    </style>

    <style name="Widget.Todo.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Todo.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/inverse</item>
    </style>

</resources>